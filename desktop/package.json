{
  "name": "gridbot-chuck",
  "version": "1.0.0",
  "description": "GridBot Chuck - Automated Crypto Grid Trading Bot",
  "main": "src/main.js",
  "author": "GridBot Chuck",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dev": "electron . --dev"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "axios": "^1.6.0",
    "ccxt": "^4.2.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.gridbotchuck.app",
    "productName": "GridBot Chuck",
    "copyright": "Copyright Â© 2024",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GridBot Chuck",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.finance"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Finance"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../",
        "to": "bot",
        "filter": ["**/*", "!desktop/**", "!installer/**", "!.git/**", "!.venv/**", "!__pycache__/**", "!*.log"]
      }
    ],
    "directories": {
      "output": "dist"
    }
  }
}
