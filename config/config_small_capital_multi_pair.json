{
  "exchange": {
    "name": "kraken",
    "trading_mode": "live",
    "trading_fee": 0.0026,
    "rate_limiting": {
      "enabled": true,
      "max_calls_per_second": 1
    }
  },
  "pair": {
    "base_currency": "XLM",
    "quote_currency": "USD"
  },
  "trading_settings": {
    "timeframe": "15m",
    "initial_balance": 55,
    "min_order_value": 5.0
  },
  "grid_strategy": {
    "type": "simple_grid",
    "spacing": "geometric",
    "num_grids": 4,
    "range": {
      "top": 0.15,
      "bottom": 0.11
    },
    "order_size_percent": 35
  },
  "risk_management": {
    "take_profit": {
      "enabled": true,
      "threshold_percent": 15
    },
    "stop_loss": {
      "enabled": true,
      "threshold_percent": 12
    },
    "circuit_breaker": {
      "enabled": true,
      "max_consecutive_failures": 5,
      "max_loss_percent": 10,
      "recovery_timeout_minutes": 5
    },
    "max_position_size_percent": 40
  },
  "multi_pair": {
    "enabled": true,
    "max_pairs": 2,
    "min_balance_per_pair": 20.0,
    "balance_split": "equal",
    "auto_select": true,
    "auto_switch": {
      "enabled": true,
      "check_interval_minutes": 30,
      "min_stuck_checks_before_switch": 2,
      "switch_cooldown_minutes": 60,
      "candidate_pairs": [
        "XLM/USD",
        "XRP/USD",
        "DOGE/USD",
        "MATIC/USD",
        "ADA/USD",
        "ALGO/USD"
      ]
    }
  },
  "multi_timeframe_analysis": {
    "enabled": true,
    "timeframes": {
      "trend": "1d",
      "config": "4h",
      "execution": "1h"
    },
    "analysis_interval_minutes": 60,
    "pause_on_strong_trend": true
  },
  "notifications": {
    "enabled": true,
    "events": {
      "bot_started": true,
      "bot_stopped": true,
      "order_filled": true,
      "order_failed": true,
      "pair_switched": true,
      "circuit_breaker_opened": true,
      "significant_profit": true,
      "loss_warning": true
    }
  },
  "logging": {
    "level": "INFO",
    "file": "logs/gridbotchuck.log",
    "console": true
  },
  "database": {
    "enabled": true,
    "type": "sqlite",
    "path": "data/gridbotchuck.db",
    "backup_enabled": true,
    "backup_interval_hours": 24
  }
}
